<div class="table-responsive pt-3">
  <a class="btn btn-primary my-3" href="/admin/add-product" >add products</a>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>
          #
        </th>
        <th>
          image
        </th>
        <th>
          name
        </th>
        <th>
          Description
        </th>
        <th>
          price
        </th>
        <th>
          catogory
        </th>
        <th>
          <!-- <button>btn</button> -->
        </th>


      </tr>
    </thead>
    <tbody>
      <% products.forEach((products,index)=>{%>
<tr>
  <td>
<%= index+1 %>
  </td>
  <td>
<img style="border-radius:0;" src="/productimages/<%= products._id %>.jpg" alt="img">
  </td>
  <td>
    <%= products.name %>
  </td>
  <td>
    <%= products.description %>
   
  </td>
  <td>
    <%= products.price %>
  </td>
  <td>
    <%= products.catogory %>
  </td>
  <td>
 <a href="/admin/edit-product/<%=products._id%>"> <button class="btn-primary">edit</button></a> 
 <a href="/admin/delete-product/<%=products._id%>" onclick="return confirm('are you sure want to delete the product <%= products.name %>')"><button class="btn-danger">delete</button></a>
  </td>
</tr>
<% })%>
    </tbody>
  </table>
</div>